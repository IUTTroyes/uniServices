// apps/admin/tsconfig.json
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@": [
        "src"
      ],
      "@/*": [
        "src/*"
      ],
      "@composables": [
        "src/composables/index.ts"
      ],
      "@composables/*": [
        "src/composables/*"
      ],
      "@requests": [
        "../../packages/common-requests/index.ts"
      ],
      "@stores": [
        "../../packages/common-stores/index.ts"
      ],
      "@types": [
        "../../packages/common-types/index.ts"
      ]
    },
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src",
    "vite.config.ts"
  ]
}
